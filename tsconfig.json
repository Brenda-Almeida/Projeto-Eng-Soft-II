{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "lib": [
        "ESNext"
      ],
      "strictNullChecks": false,
      "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }
